{
    // Extends the base devcontainer configuration for development environment
    "name": "Development Environment",
    "image": "ghcr.io/majikmate/devcontainer-base:latest",

    // Additional features for development
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1.0.15": {
            "installDirectlyFromGitHubRelease": true,
            "version": "latest"
        }
    },

    // Install devcontainer cli for development work
    "updateContentCommand": "npm install -g @devcontainers/cli",

    // Development-specific VS Code configuration
    "customizations": {
        "vscode": {
            "extensions": [
                // Additional extensions for development
                "github.vscode-github-actions"
            ],
            "settings": {
            }
        }
    }
}
